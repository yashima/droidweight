<resources>
    <style name="WeightyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/custom_bg2</item>        
    </style>
    
    <style name="TextHuge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:textSize">40sp</item>             
    </style>
    
    <style name="TextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>                            
    </style>
    
   <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>                             
    </style>
    
    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>                        
    </style>
    
    <style name="TextTiny" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>                                     
    </style>
    
    <!--  old styles first try don't use anymore -->
     
    <style name="DarkButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:background">#666666</item>                
        <item name="android:textStyle">bold</item> 
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>                 
    </style>
  
    
    <style name="MyNumberBox" parent="@android:style/Widget.EditText">
        <item name="android:inputType">numberSigned|numberDecimal|number</item> 
        <item name="android:background">@android:drawable/editbox_background</item>
    </style>
    
    <style name="MyBasicLayout">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:orientation">vertical</item>                            
    </style>
      
</resources>