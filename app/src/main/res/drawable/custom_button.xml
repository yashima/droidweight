<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/Orange2"
                android:endColor="@color/Orange3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/Grey5" />
            <corners
                android:radius="3dp" />
            <padding 
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/Red2"
                android:startColor="@color/Red1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/Grey5" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/Grey4"
                android:startColor="@color/Grey3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/Grey5" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
